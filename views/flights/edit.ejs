<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="edit-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="<%= flight.airline %>" selected><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>" selected><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight No.:</label>
    <input type="number" name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input">
    
    <label for="departs-input">Departure Date:</label>
    <input type="datetime" name="departs" value=<%= flight.departs.toLocaleDateString() %> id="departs-input">

    <button type="submit">Book Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>